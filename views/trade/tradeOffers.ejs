<%- include('../partials/header.ejs')%>
    <main class="container-fluid">
        <div class="row justify-content-center p-5">
            <div class="col-sm-10">
                <div class="card justify-content-center p-5 border-info">
                    <h4 class="text-center">Current Offers received</h4> <br>
                    <%if(myTradeOffers.length>0){%>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Requester</th>
                                    <th>Receiver</th>
                                    <th>Requester Product</th>
                                    <th>Receiver Product</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <%myTradeOffers.forEach(myTrades=>{%>
                                <tr>
                                    <td>
                                        <%=myTrades.createdAt.toLocaleString();%>
                                    </td>
                                    <td>
                                        <%=myTrades.RequesterName%>
                                    </td>
                                    <td>
                                        <%=myTrades.ReceiverName%>
                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.RequesterProductId%>">
                                            <%=myTrades.RequesterProductName%>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.ReceiverProductId%>">
                                            <%=myTrades.ReceiverProductName%>
                                        </a>
                                    </td>
                                    <td>
                                        <%=myTrades.tradeStatus%>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <form action="/trades/accept/<%=myTrades._id%>" method='POST' class="mr-1">
                                                <input class="btn btn-success" id="CancelBtn" type="submit"
                                                    value="Accept">
                                            </form>
                                            <form action="/trades/decline/<%=myTrades._id%>" method='POST'>
                                                <input class="btn btn-danger" id="CancelBtn" type="submit"
                                                    value="Decline">
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <%});%>
                        </table>
                        <%}else{%>
                            <h4 class="text-center">You have not received any offers yet.</h4>
                            <%}%>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs')%>