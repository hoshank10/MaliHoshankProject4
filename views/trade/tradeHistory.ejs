<%- include('../partials/header.ejs')%>
    <main class="container-fluid">
        <div class="row justify-content-center p-5">
            <div class="col-sm-10">
                <div class="card justify-content-center p-5 border-info">
                    <h4 class="text-center">Current Offers made by you</h4> <br>
                    <%if(myTradeOffers.length>0){%>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Requester</th>
                                    <th>Receiver</th>
                                    <th>Requester Product</th>
                                    <th>Receiver Product</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <%myTradeOffers.forEach(myTrades=>{%>
                                <tr>
                                    <td>
                                        <%=myTrades.createdAt.toLocaleString();%>
                                    </td>
                                    <td>
                                        <%=myTrades.RequesterName%>
                                    </td>
                                    <td>
                                        <%=myTrades.ReceiverName%>
                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.RequesterProductId%>">
                                            <%=myTrades.RequesterProductName%>
                                        </a>

                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.ReceiverProductId%>">
                                            <%=myTrades.ReceiverProductName%>
                                        </a>
                                    </td>
                                    <td>
                                        <%=myTrades.tradeStatus%>
                                    </td>
                                    <td>
                                        <form action="/trades/cancelOffer/<%=myTrades._id%>" method='POST'>
                                            <input class="btn btn-danger" id="CancelBtn" type="submit"
                                                value="Cancel Offer">
                                        </form>
                                    </td>
                                </tr>
                                <%});%>
                        </table>
                        <%}else{%>
                            <h4 class="text-center">You have not made any offers. To check the offers you received go to
                                Trade Offers page</h4>
                            <%}%>
                </div>
            </div>
        </div>
        <div class="row justify-content-center p-5">
            <div class="col-sm-10">
                <div class="card justify-content-center p-5 border-info">
                    <h4 class="text-center">Trade History</h4> <br>
                    <%if(myTradeHistory.length>0){%>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Requester</th>
                                    <th>Receiver</th>
                                    <th>Requester Product</th>
                                    <th>Receiver Product</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <%myTradeHistory.forEach(myTrades=>{%>
                                <tr>
                                    <td>
                                        <%=myTrades.createdAt.toLocaleString();%>
                                    </td>
                                    <td>
                                        <%=myTrades.RequesterName%>
                                    </td>
                                    <td>
                                        <%=myTrades.ReceiverName%>
                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.RequesterProductId%>">
                                            <%=myTrades.RequesterProductName%>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/trades/<%=myTrades.ReceiverProductId%>">
                                            <%=myTrades.ReceiverProductName%>
                                        </a>
                                    </td>
                                    <td>
                                        <%=myTrades.tradeStatus%>
                                    </td>
                                </tr>
                                <%});%>
                        </table>
                        <%}else{%>
                            <h4 class="text-center">You do not have any trade History. We encourage you to create
                                history !!!</h4>
                            <%}%>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs')%>